@model UserViewModel
@{
    ViewBag.Title = "User Info";
}

<h1>User Info</h1>

<form class="mt-3">
    <div class="form-group row">
        <label asp-for="UserID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserID" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Country" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Country" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Pin" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Pin" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Gender" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LanguagesKnown" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LanguagesKnown" disabled class="form-control">
        </div>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}